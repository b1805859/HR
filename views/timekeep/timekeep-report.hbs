<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-1 mb-3"><span class="text-muted fw-light">Chấm công /</span> Báo cáo chấm công</h4>

    <nav id="navbar-acupuncture" class="navbar bg-light mb-2" style="
    align-items: center;
    justify-content: unset;
    ">
      <div class=" col-md-5" style="margin-left: 20px;">
        <select id="months" name="months" class="select2 form-select">
          {{#each months}}
          <option value={{this._id}}>Tháng {{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </nav>
    <!-- Responsive Table -->
    <div id="card" class="card">
      <div class="table-responsive text-nowrap">
        <table class="table table-bordered">
          <thead>
            <tr id="title_month" class="text-nowrap">
            </tr>
          </thead>
          <tbody id="acupuncture_user">
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Responsive Table -->

    <!--/ Basic Pagination -->
  </div>
  <!-- / Content -->

</div>
<!-- Content wrapper -->
<script>

  $('#months').on('change', function () {
    socket.emit("employee-report", { value: this.value })
  });

</script>