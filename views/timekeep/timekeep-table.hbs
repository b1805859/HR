<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold mb-1"><span class="text-muted fw-light">Chấm công /</span> Tạo bảng chấm công</h4>

    <div class="row">
      <div class="col-md-12">
        <div class="card mb-4">
          <!-- Account -->
          <form action="/api/timekeep/table" method="POST">
            <hr class="my-0" />
            <div class="card-body">
              <div class="row">
                <div class="mb-3 col-md-6">
                  <label class="form-label" for="country">Tháng chấm công</label>
                  <select id="thang" name="thang" class="select2 form-select" required>
                    {{#each months}}
                    <option value="{{this._id}}">Tháng {{this.name}}</option>
                    {{/each}}
                  </select>
                </div>
                <div class="mb-3 col-md-12">
                  {{#if success}}
                  <div class=" alert alert-success">{{success}}</div>
                  {{/if}}
                  {{#if error}}
                  <div class=" alert alert-danger">{{error}}</div>
                  {{/if}}
                </div>
              </div>
              <div class="mt-2">
                <button type="submit" class="btn btn-primary me-2">Tạo bảng chấm công</button>
                <button type="reset" class="btn btn-secondary">
                  <a href="/api/employee/fetchEmployeeList" class="text-white">
                    Quay lại
                  </a>
                </button>
              </div>
            </div>
          </form>
          <!-- /Account -->
        </div>
      </div>
    </div>
  </div>
  <!-- / Content -->


