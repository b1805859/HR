<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold mb-1"><span class="text-muted fw-light">Chấm công /</span> Tạo bảng chấm công</h4>

    <div class="row">
      <div class="col-md-12">
        <div class="card mb-4">
          <!-- Account -->
          <form action="/api/timekeep/table" method="POST">
            <hr class="my-0" />
            <div class="card-body">
              <div class="row align-items-center">
                <div class="mb-3 col-md-6">
                  <label class="form-label" for="country">Tháng</label>
                  <select id="month" name="month" class="select2 form-select" required>
                    {{#each months}}
                    <option value="{{this._id}}">Tháng {{this.name}}</option>
                    {{/each}}
                  </select>
                </div>
                <div class="mb-3 col-md-4">
                  <label class="form-label" for="country">Năm</label>
                  <input class="form-control" type="text" id="year" name="year" readonly />
                  <script>
                    var now = new Date();
                    var year = now.getFullYear();
                    $('#year').val(`${year}`)
                  </script>
                </div>
                <div class="mb-3 col-md-6">
                  <button type="submit" class="btn btn-primary me-2">Tạo bảng chấm công</button>
                </div>
                <div class="mb-3 col-md-12">
                  {{#if success}}
                  <div class=" alert alert-success">{{success}}</div>
                  {{/if}}
                  {{#if error}}
                  <div class=" alert alert-danger">{{error}}</div>
                  {{/if}}
                </div>
              </div>
            </div>
          </form>
          <!-- /Account -->
          <div class="card">
            <div class="table-responsive text-nowrap">
              <table class="table table-hover table-bordered">
                <thead>
                  <tr>
                    <th class="text-center" style=" background:#a7e0fa">Tháng</th>
                    <th class="text-center" style=" background:#a7e0fa">Năm</th>
                    <th class="text-center" style=" background:#a7e0fa">Hoạt động
                    </th>
                  </tr>
                </thead>
                <tbody id="table-employee" class="table-border-bottom-0">
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- / Content -->


  <script>
  </script>