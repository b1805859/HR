<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold mb-1"><span class="text-muted fw-light">Nhân viên /</span> Danh sách nhân viên</h4>

    <nav class="navbar mb-2">
      <div class="container-fluid flex-row-reverse">
        <a href="/api/employee/formCreateEmployee" class="text-white">
          <button class="btn btn-primary mt-3 mt-md-0" type="button">
            <i class='bx bxs-user-plus'></i>
            Nhân viên
          </button>
        </a>
      </div>
    </nav>
    <!-- Basic Bootstrap Table -->
    <div class="card">
      <div class="table-responsive text-nowrap">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th class="text-center p-2" style=" background:#a7e0fa"></th>
              <th class="text-center p-2" style=" background:#a7e0fa">Mã</th>
              <th class="text-center p-2" style=" background:#a7e0fa">Tên</th>
              <th class="text-center p-2" style=" background:#a7e0fa">Giới tính</th>
              <th class="text-center p-2" style=" background:#a7e0fa">Phòng ban</th>
              <th class="text-center p-2" style=" background:#a7e0fa">Chức vụ</th>
              <th class="text-center p-2" style=" background:#a7e0fa">Trạng thái hồ sơ</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td></td>
              <td>
                <input id="input-code" type="text" list="search-employee" class="form-control me-2"
                  placeholder="Nhập mã nhân viên" autocomplete="off">
              </td>
              <td>

              </td>
              <td>
              </td>
              <td><select id="select-department" name="select-department" class="select2 form-select">
                </select>
              </td>
              <td>
              </td>
              <td><select id="select-status" name="select-status" class="select2 form-select" required>
                  <option class="text-center" value=''>--Tất cả --</option>
                  <option value='working'>Đang làm việc</option>
                  <option value='demit'>Lưu trữ</option>
                  <option value='draft'>Nháp</option>
                </select>
              </td>
            </tr>
          </tbody>
          <tbody id="table-employee" class="table-border-bottom-0">
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Basic Bootstrap Table -->


    <div id="pagination" class="row mt-4">

    </div>

    <script>
      //filter
      $('#select-department').html()
      var departments_encode = `{{departments}}`
      const departments = JSON.parse(departments_encode.replace(/&quot;/g, '"'));
      $('#select-department').append(`<option class="text-center" value=''>--Tất cả--</option>`)
      for (const department of departments) {
        $('#select-department').append(`<option value='${department._id}'>${department.name}</option>`)
      }




      var table_html = ""
      const table_employee = `{{employees}}`
      const table = JSON.parse(table_employee.replace(/&quot;/g, '"'));

      //Select

      for (const element of table) {
        const { employee, department } = element
        table_html += "<tr> "
        table_html += `<td><div style="background-image: url('/assets/img/avatars/${employee.avatar}');
                    width: 45px;
                    height: 45px;
                    background-size: cover;
                    background-position: top center;
                    border-radius: 50%;
                    margin: 0 auto;"></div></td>`
        table_html += `<td class="text-left"><a style='font-size: 0.9375rem; color: #697a8d;' href="/api/employee/getEmployeeInformation/${employee._id}">${employee.code}</a></td>`
        table_html += `<td class="text-left"><a style='font-size: 0.9375rem; color: #697a8d;' href="/api/employee/getEmployeeInformation/${employee._id}">${employee.name}</a></td>`
        table_html += `<td class="text-center"><a style='font-size: 0.9375rem; color: #697a8d;' href="/api/employee/getEmployeeInformation/${employee._id}">${employee.gender}</a></td>`
        table_html += `<td class="text-center"><a style='font-size: 0.9375rem; color: #697a8d;' href="/api/employee/getEmployeeInformation/${employee._id}">${department}</a></td>`
        table_html += `<td class="text-center"><a style='font-size: 0.9375rem; color: #697a8d;' href="/api/employee/getEmployeeInformation/${employee._id}">${employee.job}</a></td>`
        if (employee.status == "draft") {
          table_html += `<td class="text-center"><a style='font-size: 0.9375rem; color: #697a8d;' href="/api/employee/getEmployeeInformation/${employee._id}"><span class="badge bg-secondary me-1">Nháp</span></a></td>`
        }
        else if (employee.status == 'demit') {
          table_html += `<td class="text-center"><a style='font-size: 0.9375rem; color: #697a8d;' href="/api/employee/getEmployeeInformation/${employee._id}"><span class="badge bg-danger me-1">Lưu trữ</span></a></td>`
        }
        else if (employee.status == 'working') {
          table_html += `<td class="text-center"><a style='font-size: 0.9375rem; color: #697a8d;' href="/api/employee/getEmployeeInformation/${employee._id}"><span class="badge bg-success me-1">Đang làm việc</span></a></td>`
        }
        table_html += "</tr>"
      }

      $('#table-employee').html(table_html)



      //PAGINATION
      var html = "";
      var pages = {{ pages }}
      var current = {{ current }}

      if (pages > 0) {
        html += "<nav class='mx-auto'>"
        html += "<ul class='pagination mt-1'>"

        //FIRST ITEM 
        if (current == 1) {
          // Nếu thông số http://localhost:3333/news/1/ là 1 thì First sẽ bị disabled
          html += "<li class='page-item disabled'>"
          html += "<a class='page-link' href='/api/employee/fetchEmployeeList/1'>First</a>"
          html += "</li>"
        } else {
          // Nếu thông số http://localhost:3333/news/2/ từ 2 trở lên thì First sẽ bỏ disabled
          html += "<li class='page-item'>"
          html += "<a class='page-link' href='http://localhost:3000/api/employee/filter/:1'>First</a>"
          html += "</li>"
        }

        // ITEMS
        var i = (Number(current) > 3 ? Number(current) - 2 : 1)
        // Toán tử điều kiện 3 ngôi syntax: < điều_kiện ? giá_trị_1 : giá_trị_2 >
        // Nếu điều_kiện trả về true, toán tử có giá trị giá_trị_1. Ngược lại toán tử có giá trị giá_trị_2.
        if (i !== 1) {
          html += "<li class='page-item disabled'>"
          html += "<a class='page-link' href='#'>...</a>"
          html += "</li>"
        }

        for (; i <= (Number(current) + 2) && i <= pages; i++) {
          // Sử dụng vòng lặp để lặp qua từng trang và tăng số trang 
          // Trong vòng lặp for có ba biểu thức tùy chọn nên chỉ cần các bạn tách mỗi biểu thức bằng dấu `;` là oke rồi
          if (i == current) {
            html += "<li class='page-item active'>"
            html += `<a class='page-link' href='/api/employee/fetchEmployeeList/${i}'>`
            html += i
            html += "</a>"
            html += "</li>"
          } else {
            html += "<li class='page-item'>"
            html += `<a class='page-link' href='/api/employee/fetchEmployeeList/${i}'>`
            html += i
            html += "</a>"
            html += "</li>"
          }

          if (i == Number(current) + 2 && i < pages) {
            html += "<li class='page-item disabled'>"
            html += "<a class='page-link' href='#''>...</a>"
            html += "</li>"
          }
        }

        // LAST ITEM
        if (current == pages) {
          // Nếu số current( chỉ số phân trang ) là 6 và tổng số page là 6 thì Last bị disabled
          html += "<li class='page-item disabled'>"
          html += "<a class='page-link' href='#''>"
          html += "Last"
          html += "</a>"
          html += "</li>"
        } else {
          // Ngược lại, thì Last là trang cuối cùng pages ở đây là 6 đồng nghĩa với Last là trang số 6
          html += "<li class='page-item'>"
          html += `<a class='page-link' href='/api/employee/fetchEmployeeList/${pages}'>`
          html += "Last"
          html += "</a>"
          html += "</li>"
        }
        html += "</ul>"
        html += "</nav>"
      }
      html += "</div>"



      $("#pagination").html(html)




    </script>

  </div>

</div>


