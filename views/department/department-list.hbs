<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold mb-1"><span class="text-muted fw-light">Phòng ban /</span> Danh sách phòng ban</h4>

    <nav class="navbar bg-light mb-2">
      <div class="container-fluid">
        <button class="btn btn-success mt-3 mt-md-0" type="button">
          <a href="/api/department/formCreateDepartment" class="text-white">
            Thêm phòng ban
          </a>
        </button>
      </div>
    </nav>
    <!-- Basic Bootstrap Table -->
    <div class="card">
      <div class="table-responsive text-nowrap">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Tên phòng ban</th>
              <th>Số điện thoại liên hệ</th>
              <th>Trạng thái</th>
              <th>Trưởng phòng</th>
            </tr>
          </thead>
          <tbody id="table-department" class="table-border-bottom-0">
            {{#each departments}}
            <tr>
              <td><a href="/api/department/getDepartmentInformation/{{this._id}}">{{name}}</a></td>
              <td>{{phone}}</td>
              <td>{{status}}</td>
              <td>{{name_lead}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Basic Bootstrap Table -->

    <hr class="my-4" />


  </div>
  <!-- / Content -->



</div>
<!-- Content wrapper -->