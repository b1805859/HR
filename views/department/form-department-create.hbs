<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold mb-4"><span class="text-muted fw-light">Phòng ban /</span> Thêm mới phòng ban</h4>

    <div class="row">
      <div class="col-md-12">
        <div class="card mb-4">
          <h5 class="card-header">Thông tin phòng ban</h5>
          <!-- Account -->
          <form action="/api/department/createDepartment" id="formAccountSettings" method="POST">
            <div class="card-body">
              <div class="row flex-column">
                <div class="mb-3 col-md-6">
                  <label for="name" class="form-label">Tên phòng ban</label> (<span class="text-danger">*</span>)
                  <input class="form-control" type="text" id="name" name="name" placeholder="VD: Kế toán" required
                    autofocus autocomplete="off" />
                </div>
                <div class="mb-3 col-md-6">
                  <label for="phone" class="form-label">Liên hệ</label>
                  <input class="form-control" type="text" id="phone" name="phone" placeholder="" autofocus
                    autocomplete="off" />
                </div>
                <div class="mb-3 col-md-6 d-none">
                  <label for="code-manager" class="form-label">Trưởng phòng</label>
                  <input id="code-manager" type="text" list="code-manager-list" class="form-control me-2"
                    name="employee_code" placeholder="Nhập mã nhân viên" autocomplete="off">
                  <datalist id="code-manager-list">
                  </datalist>
                </div>
              </div>
              <div class="mt-2">
                <button type="submit" class="btn btn-primary me-2">Tạo mới phòng ban</button>
                <a href="/api/department/fetchDepartmentList/1">
                  <button class="btn btn-secondary me-2">Quay lại</button>
                </a>
              </div>
            </div>
          </form>
          <!-- /Account -->
        </div>
      </div>
    </div>
  </div>
  <!-- / Content -->


  <div class="content-backdrop fade"></div>
</div>
<!-- Content wrapper -->